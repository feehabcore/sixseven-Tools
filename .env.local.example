# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# MongoDB
MONGODB_URI=mongodb://localhost:27017/kurel-flow
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/kurel-flow

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys (if using third-party services)
RAPIDAPI_KEY=your-rapidapi-key-if-needed
REMOVE_BG_API_KEY=your-remove-bg-api-key-if-needed
